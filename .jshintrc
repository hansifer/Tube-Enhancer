{
   // enforce

  "bitwise": true,
  "curly": true,
  "eqeqeq": true,
  "latedef": false,
  "noarg": true,
  "nonbsp": true,
  "nonew": true,
  "undef": true,
  "unused": true,

  // relax

  "sub": true,
  "esnext": true, // This option has been deprecated and will be removed in the next major release of JSHint. Use esversion: 6 instead
  "boss": false,
  "eqnull": true,
  "evil": false,
  "expr": false,
  "iterator": false,
  "lastsemic": false,
  "loopfunc": false,
  "moz": false,
  "notypeof": false,  // 2015-11-29 http://jshint.com/docs/options/ incorrectly identifies this as an ENFORCING option
  "noyield": false,
  "proto": false,
  "scripturl": false,
  "shadow": "inner",  // 2015-11-29 http://jshint.com/docs/options/ incorrectly identifies this as an ENFORCING option
  "supernew": false,
  "funcscope": true,  // 2015-11-29 http://jshint.com/docs/options/ incorrectly identifies this as an ENFORCING option

// environment

  "devel": true,
  "browser": true,
  "jquery": true,
  "node": false,
  
  "smarttabs": true,

  "predef": [
    "module"
  ]
}
